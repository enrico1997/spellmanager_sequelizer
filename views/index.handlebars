<div class="container">
    <div class="row">
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each spell}} {{#unless this.cast}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.spell_name}}
					</pre>
                    <!-- {{this.Date}} -->
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/spells/update?_method=PUT" class="button-size">
                        <input input type="hidden" type="text" name="spell_id" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">Accio!</button>
                    </form>
                </div>
                {{/unless}} {{/each}}
            </div>
        </div>
        <div class="col-xs-6 text-center" class="task">
            {{#each spell}} {{#if this.cast}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.spell_name}}" readonly> {{/if}} {{/each}}
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/spells/create" method="POST">
                <input type="text" class="form-control" name="spell_name" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Add Spell</button>
            </form>
        </div>
    </div>
</div>